    <field minOccurs="0" name="error" type="java.lang.String"/>
    <field minOccurs="0" name="correlationId" type="java.lang.String"/>
    <field foreignKey="nabu.frameworks.process.database.types.processStateInstance:id" name="processStateInstanceId" pattern="[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}|[0-9a-fA-F]{32}" type="java.util.UUID"/>
